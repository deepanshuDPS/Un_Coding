<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.Small" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Toolbar.Normal" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="Toolbar.Large" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25dp</item>
    </style>
    <style name="Toolbar.Xlarge" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">48dp</item>
</style>
    <style name="NV.small" parent="AppTheme">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginBottom">02dp</item>
    </style>
    <style name="NV.normal" parent="AppTheme">
        <item name="android:textSize">17dp</item>
        <item name="android:layout_marginBottom">02dp</item>
    </style>
    <style name="NV.large" parent="AppTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">02dp</item>
    </style>
    <style name="NV.xlarge" parent="AppTheme">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginBottom">02dp</item>
    </style>

    <!--<style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
